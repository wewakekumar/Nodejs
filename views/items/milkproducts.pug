extends ../header.pug
block styles
    link(rel="stylesheet" href="/css/grid.css")
block content
    .grid-container
        each milkproduct in milkproducts
            .card
                img(src=milkproduct.imageURL)
                p Price Rs. #{milkproduct.price}
                .button-container
                    a(href=`/products/`+milkproduct.category+`/`+milkproduct.id)
                        button See Details
                    button Add to cart

    include ../footer.pug