extends ../header.pug
block styles
    link(rel="stylesheet" href="/css/grid.css")
block content
    .grid-container
        each medicine in medicines
            .card
                img(src=medicine.imageURL)
                p Price Rs. #{medicine.price}
                .button-container
                    a(href=`/products/`+medicine.category+`/`+medicine.id)
                        button See Details
                    button Add to cart

    include ../footer.pug